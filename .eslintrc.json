{
    "rules": {
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "env": {
        "es6": true
    }
}
