{
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "rules": {
        "linebreak-style":[
            "error",
            "unix"
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    }
}
